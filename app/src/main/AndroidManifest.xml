<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prog20082.habitual">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateHabitActivity"></activity>

        <service android:name="com.prog20082.habitual.TimeService"
            android:enabled="true"/>

        //register the service

        <receiver android:name="com.prog20082.habitual.NotificationPublisher"/>

    </application>

</manifest>
